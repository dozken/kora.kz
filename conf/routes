GET         /ad/breed/:id                          controllers.Ads.getBreeds(id:Long)
GET         /ad/city/:id                           controllers.Ads.getCities(id:Long)
#GET     /ad/:id/edit                controllers.Ads.edit(id: Long)
#POST    /ad/:id/update              controllers.Ads.update(id: Long)
