# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /signIn                     controllers.Application.signIn()
GET     /signOut                    controllers.Application.signOut()
GET     /ad                         controllers.Application.item()
GET     /ad/create                  controllers.Application.createAd()
GET     /ad/search                  controllers.Application.adList()
GET     /profile/ads                controllers.Application.profile()
GET     /profile/messages           controllers.Application.myMessages()
GET     /profile/payments           controllers.Application.myMoney()
GET     /profile/settings           controllers.Application.mySettings()
GET     /profile/info               controllers.Application.myProfile()
GET     /profile/info/edit          controllers.Application.myProfileEdit()

GET     /adminPage                           controllers.Application.adminPage()

GET     /addFilter                           controllers.Application.addFilter()

GET     /addReklam                           controllers.Application.addReklam()

GET     /adminMessage                           controllers.Application.adminMessage()

GET     /adminProfile                           controllers.Application.adminProfile()

GET     /adminProfileEdit                           controllers.Application.adminProfileEdit()

GET     /users                           controllers.Application.users()

GET     /about                           controllers.Application.about()

GET     /read                           controllers.Application.read()

GET     /adminRead                           controllers.Application.adminRead()

GET     /feedback                           controllers.Application.feedback()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
