#POST    /ad/:id/highlight           controllers.Ads.highlight(id: Long)
#POST    /ad/:id/autoextend          controllers.Ads.autoExtend(id: Long)
#POST    /ad/:id/archive             controllers.Ads.archive(id: Long)
#POST    /ad/:id/message             controllers.Message.send(id: Long)
